##? Usage: ff [options] [PATTERN]
##?
##? Find files matching a string and print their full file name.
##?
##? Arguments:
##?   PATTERN                       optional string
##?
##? Options:
##?   -h, --help                    display this help and exit
##?   -V, --version                 display version information and exit
##?
##? Examples:
##?   ff                            list all files
##?   ff main.c                     list files matching main.c in their name

set -euo pipefail

# Check if docopts command is available.
if ! command -v docopts > /dev/null 2>&1; then
    printf >&2 'Error: docopts command not found.\n'
    exit 2
fi

# Get help and version information.
help=$(grep "^##?" "$0" | cut -c 5-)
version=$(grep "^#?" "$0" | cut -c 4-)

# Parse arguments.
parsed="$(docopts -h "$help" -V "$version" : "$@")"
eval "$parsed"

# Define colors.
DIR_COLOR="1;34"                        # Blue color.
MATCH_COLOR="1;33;1;44"                 # Yellow text on blue background.
DEFAULT_COLOR="0"                       # Reset to default colors.

# Find and colorize matching filenames.
stdbuf -oL find . -type f -iname "*$PATTERN*" -printf '%P\n' \
    | GREP_COLORS="sl=$DIR_COLOR:mt=$DEFAULT_COLOR" stdbuf -oL grep --color=always '[^/]*$' \
    | GREP_COLORS="sl=$DEFAULT_COLOR"               stdbuf -oL grep --color=always -iP "$PATTERN(?=[^/]*$)" \
    | GREP_COLORS="sl=$DIR_COLOR:mt=$MATCH_COLOR"              grep -i "$PATTERN" --color=always
