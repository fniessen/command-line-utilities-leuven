##? Usage: uncolor [options] [FILE]
##?
##? Strip color sequences from the input text.
##?
##? Arguments:
##?   FILE                          file
##?
##? Options:
##?   -h, --help                    display this help and exit
##?   -V, --version                 display version information and exit

# Check if docopts command is available.
command -v docopts > /dev/null 2>&1 || { printf >&2 'Error: docopts command not found.\n'; exit 2; }

help=$(grep "^##?" "$0" | cut -c 5-)
version=$(grep "^#?"  "$0" | cut -c 4-)
parsed="$(docopts -h "$help" -V "$version" : "$@")"
eval "$parsed"

# Define the sed command as a string.
command="sed -r 's/\x1b\[([0-9]{1,3}((;[0-9]{1,3})*)?)?[m|K]//g'"
                                        # Command to remove ANSI escape
                                        # sequences (often used to change the
                                        # color, background, or style of text in
                                        # the terminal).

# Check if the FILE variable is non-empty.
if [ -n "$FILE" ]; then
    eval "$command $FILE"
else
    eval "$command"
fi
