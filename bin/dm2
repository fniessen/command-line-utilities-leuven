#!/usr/bin/env bash

# Search files (and directories?) matching the specified pattern, sort by timestamp.

# Check if a search pattern is provided.
if [ $# -eq 0 ]; then
    printf "Please provide a search pattern.\n"
    exit 1
fi

find . -iname "*$1*" -printf "%C@ %CY-%Cm-%Cd %Ca %CH:%CM - %P\n" \
    | sort -n \
    | cut -d " " -f 2- \
    | grep -i "$1"

# Exit with a success code.
exit 0
