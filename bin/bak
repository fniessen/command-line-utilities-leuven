##? Usage: bak [options] FILE
##?
##? Create a quick back-up copy of a file.
##?
##? Arguments:
##?   FILE                          file to copy
##?
##? Options:
##?   -h, --help                    display this help and exit
##?   -V, --version                 display version information and exit
##?
##? Example:
##?   bak core/main.c

# Check if docopts command is available.
command -v docopts > /dev/null 2>&1 || { printf >&2 'Error: docopts command not found.\n'; exit 2; }

help=$(grep "^##?" "$0" | cut -c 5-)
version=$(grep "^#?"  "$0" | cut -c 4-)
parsed="$(docopts -h "$help" -V "$version" : "$@")"
eval "$parsed"

# TODO: Put bak before the file extension

if test -e "$FILE.bak"; then
    read -p "Are you sure you want to overwrite $FILE.bak? [y/N] " confirm
    if [[ "$confirm" =~ ^[yY]$ ]]; then
        cp "$FILE" "$FILE".bak \
            && printf 'Copied '\''%s'\'' -> '\''%s'\''\n' "$FILE" "$FILE".bak
    else
        echo "Operation cancelled."
    fi
else
    cp "$FILE" "$FILE".bak \
        && printf 'Copied '\''%s'\'' -> '\''%s'\''\n' "$FILE" "$FILE".bak
fi
