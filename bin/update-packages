#!/usr/bin/env bash

# Update package list and upgrade all installed packages to their latest
# versions.

# Define ANSI escape codes for bold text.
BOLD=$(tput bold)
NORMAL=$(tput sgr0)

printf "${BOLD}Updating package list...${NORMAL}\n"
sudo apt update

printf "\n${BOLD}Upgrading installed packages...${NORMAL}\n"
sudo apt upgrade -y

printf "\n${BOLD}Upgrade completed.${NORMAL}\n"
